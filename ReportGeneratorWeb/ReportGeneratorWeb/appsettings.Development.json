{
    "Logging": {
        "IncludeScopes": false,
        "LogLevel": {
            "Default": "Debug",
            "System": "Information",
            "Microsoft": "Information"
        }
    },
    "Serilog": {
        "MinimumLevel": "Debug",
        "Using": [ "Serilog.Sinks.RollingFile" ],
        "WriteTo": [
            {
                "Name": "RollingFile",
                "Args": { "pathFormat": "logs/log-{Date}.txt" }
            }
        ],
        "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
        "Properties": {
            "Application": "ReportGenerator.Web",
            "Environment": "Development"
        }
    }
}
